<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    style="dialog_style"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/dialog_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_login_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/user_name"
                android:gravity="center"
                android:hint="请输入账号"
                android:textColorHint="@color/login" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"

            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/ed_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/user_password"
                android:gravity="center"
                android:hint="请输入密码"
                android:textColorHint="@color/login" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login_tv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即注册"
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/tv_login_tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="忘记密码"
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/tv_login_tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="在线客服"
                android:textColor="@color/textcolor" />


        </LinearLayout>


        <Button
            android:id="@+id/tb_login_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@mipmap/bt_login" />


    </LinearLayout>

  
    
    
